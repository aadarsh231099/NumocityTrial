{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "google",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": ["off"],
        "complexity": ["error", {"max": 7}],
        "require-jsdoc": ["off"],
        "new-cap": ["off"],
        "max-len": [2, {"code": 100, "ignoreUrls": true}],
        "camelcase": ["error", {"allow": ["print_color_map"]}]
    }
}
